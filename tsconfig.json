{
  "compilerOptions": {
    "moduleResolution": "Node",
    "module": "commonjs",
    "target": "es2020",

    "rootDir": "src",
    "outDir": "dist",

    "declaration": true,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}